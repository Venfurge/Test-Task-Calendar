@model List<TaskModel>
@{
    ViewData["Title"] = "Tasks";
}

<h1>Date: @ViewData["Date"]</h1>
<h1>@ViewData["Title"]</h1>

<br />

@foreach (TaskModel task in Model)
{
    <form method="post" action="~/Home/RemoveTask">
        <div>
            <p>@task.Text | @task.Time</p>
            <input type="hidden" name="date" value="@ViewData["Date"]" />
            <input type="hidden" name="id" value="@task.Id" />
            <input type="submit" value="Delete" />
        </div>
        <br />
    </form>
}

<hr />

<form method="post" action="~/Home/AddTask">
    <label>Add Task:</label><br />
    <input type="hidden" name="date" value="@ViewData["Date"]" />
    <input type="text" name="text" /><br /><br />
    <input type="time" name="time" /><br /><br />
    <input type="submit" value="Add" />
</form>
